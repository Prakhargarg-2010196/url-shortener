{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "~/*" :["./src/*"],
            "components/*":["./src/components/*"],
            "views/*":["./src/views/*"],
        }
    },
    "exclude": [
        "node_modules",
        // "**/node_modules/*"
    ]
}